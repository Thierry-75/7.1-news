{% extends 'base.html.twig' %}
{% block title %}inscription
{% endblock %}
{% block importmap %}
	{{ parent() }}
	{{ importmap('controlForm') }}
{% endblock %}
{% block body %}


					<h1 class="text-xl text-center font-bold leading-tight tracking-tight text-cyan-400 md:text-2xl dark:text-white">
						Inscription
					</h1>
					<div>
						<p id="message_form_inscription"></p>
					</div>
					{{
          form_start(registrationForm, {
            attr: {
              novalidate: "novalidate",
              class: "space-y-4 md:space-y-6",
              id: "registration_form"
            }
          })
        }}
					<div>
						{{ form_label(registrationForm.email) }}
						{{ form_widget(registrationForm.email) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.email) }}
							<small id="emailSmall"></small>
						</div>
					</div>
					<div>
						{{ form_label(registrationForm.pseudo) }}
						{{ form_widget(registrationForm.pseudo) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.pseudo) }}
							<small id="pseudoSmall"></small>
						</div>
					</div>
					<div>
						{{ form_label(registrationForm.plainPassword) }}
						{{ form_widget(registrationForm.plainPassword) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.plainPassword) }}
							<small id="plainPasswordSmall"></small>
						</div>
					</div>
					<div>
						{{ form_label(registrationForm.zip) }}
						{{ form_widget(registrationForm.zip) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.zip) }}
							<small id="zipSmall"></small>
						</div>
					</div>
					<div>
						{{ form_label(registrationForm.city) }}
						{{ form_widget(registrationForm.city) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.city) }}
							<small id="citySmall"></small>
						</div>
					</div>
					<div>
						{{ form_label(registrationForm.avatar) }}
						{{ form_widget(registrationForm.avatar) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.avatar) }}
							<small id="citySmall"></small>
						</div>
					</div>
					<div class="flex items-start">
						<div class="flex items-center h-5">
							{{ form_widget(registrationForm.agreeTerms) }}
						</div>
						<div class="ml-3 text-sm">
							{{ form_label(registrationForm.agreeTerms) }}
						</div>
						<div class="text-sm text-red-700 ml-2">
							{{ form_errors(registrationForm.agreeTerms) }}
						</div>
					</div>
					<button type="submit" id="registration_form_submit" class="w-full btn-info">
						Cr&eacute;er votre compte
					</button>
					{{ form_end(registrationForm) }}
					<p class="text-xs font-light text-gray-500 dark:text-gray-400">
						D&eacute;j&agrave; inscrit ? &nbsp;&nbsp;
						<a href="{{ path('app_login') }}" class="font-medium text-cyan-400 hover:underline dark:text-primary-500">&nbsp;Connexion</a>
					</p>
	
{% endblock %}
